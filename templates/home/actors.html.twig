{% extends 'base.html.twig' %}

{% block title %}Hello!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark" style="width: 80%;">
        <div class="row">
            {% for actor in actors %}
                <div class="card col-md-4" style="width:16rem">
                    <a href="{{ path('show_actor', {'id': actor.id }) }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ actor.name }}</h5>
                            {% if actor.image starts with 'http' %}
                                <img style="max-width: 100%" src="{{ actor.image }}" alt="{{ actor.firstName }}-{{ actor.lastName }}">
                            {% else %}
                                <img style="max-width: 100%"  src="/assets/upload/image/{{ actor.image }}" alt="{{ actor.name }}">
                            {% endif %}
                        </div>
                    </a>
                    <a href="{{ path('show_by_actor', {'id': actor.id }) }}">
                        <button>Movies</button>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
